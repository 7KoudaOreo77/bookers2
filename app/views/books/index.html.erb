<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= image_tag book.get_image %>
  <% end %>

  <p>投稿ユーザー画像：<%= image_tag 'sample-author1.jpg' %></p>
  <p>Tittle：<%= book.titlle %></p>
  <p>Body：<%= book.body %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>

</div>
<% end %>
